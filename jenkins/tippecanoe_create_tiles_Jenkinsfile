pipeline {
  agent none 
  stages {
    stage('Checkout repo and pull from S3') {
      agent any 
      steps {
        sh 'wget -O DOIRootCA2.cer http://sslhelp.doi.net/docs/DOIRootCA2.cer'
        git "https://github.com/usgs-makerspace/wbeep-processing"
        sh 'aws s3 sync s3://prod-owi-resources/resources/Application/wbeep/development/hru_shape/hrus.geojson hrus.geojson'
      }
    }
    stage('create tileset') {
      agent {
        docker {
          image 'code.chs.usgs.gov:5001/wma/iidd/wbeep-data-processing:tippecanoe-latest'
          alwaysPull true
        } 
      }
      steps {
        sh 'tippecanoe -Z4 -z8 --no-tiny-polygon-reduction --detect-shared-borders --simplify-only-low-zooms "--simplification=5" --output-to-directory tile_dir_simple5 hrus.geojson'
      }
    }
    stage('push to S3') {
      agent any
      steps { 
        sh 'aws s3 sync tile_dir_simple5 s3://prod-owi-resources/resources/Application/wbeep/development/hru_shape/tile_dir_simple5 --recursive'
      }
    }
  }
}